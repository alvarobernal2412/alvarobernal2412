---
import { Calendar, MapPin, Brain, TrendingUp, Users, ChartCandlestick, Bot, Workflow, FlaskConical } from 'lucide-astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="experience" class="section">
  <div class="container">
    <h2 class="section-title">{t('experience.title')}</h2>
    <div class="experience-timeline">
      
      <div class="experience-item">
        <div class="timeline-marker"></div>
        <div class="experience-card card">
          <div class="experience-header">
            <div class="company-info">
              <h3 class="job-title">{t('experience.jobs.us.title')}</h3>
              <p class="company-name">{t('experience.jobs.us.company')}</p>
              <div class="job-meta">
                <span class="meta-item">
                  <Calendar size={14} />
                  Mar. 2025 - {t('experience.current')}
                </span>
                <span class="meta-item">
                  <MapPin size={14} />
                  {t('experience.hybrid')}
                </span>
              </div>
            </div>
            <div class="company-logo">
              <img src="/us.webp" alt="Universidad de Sevilla Logo" width="50" height="50" />
            </div>

          </div>
          
          <div class="experience-content">
            <div class="project-highlight">
              <h4 class="project-title">{t('experience.jobs.us.project')}</h4>
              <p class="project-description">{t('experience.jobs.us.description')}</p>
            </div>
            
            <div class="achievements">
              <h5 class="achievements-title">{t('experience.jobs.us.achievements.title')}</h5>
              <ul class="achievements-list">
                <li>
                  <ChartCandlestick size={16} />
                  {t('experience.jobs.us.achievements.items.0')}
                </li>
                <li>
                  <Brain size={16} />
                  {t('experience.jobs.us.achievements.items.1')}
                </li>
                <li>
                  <Users size={16} />
                  {t('experience.jobs.us.achievements.items.2')}
                </li>
              </ul>
            </div>
            
            <div class="tech-stack">
              <h5 class="tech-title">{t('experience.jobs.junior.technologies')}</h5>
              <div class="tech-tags">
                <span class="tech-tag">Google Cloud Platform</span>
                <span class="tech-tag">JavaScript</span>
                <span class="tech-tag">Node.js</span>
                <span class="tech-tag">Express</span>
                <span class="tech-tag">MongoDB</span>
                <span class="tech-tag">Grafana</span>
                <span class="tech-tag">Docker</span>
                <span class="tech-tag">Tailwind CSS</span>
                <span class="tech-tag">React</span>
                <span class="tech-tag">Node-RED</span>
                <span class="tech-tag">Github Actions</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="experience-item">
        <div class="timeline-marker"></div>
        <div class="experience-card card">
          <div class="experience-header">
            <div class="company-info">
              <h3 class="job-title">{t('experience.jobs.junior.title')}</h3>
              <p class="company-name">{t('experience.jobs.junior.company')}</p>
              <div class="job-meta">
                <span class="meta-item">
                  <Calendar size={14} />
                  Oct. 2023 - Mar. 2025
                </span>
                <span class="meta-item">
                  <MapPin size={14} />
                  {t('experience.hybrid')}
                </span>
              </div>
            </div>
            <div class="company-logo">
              <img src="/us.webp" alt="Universidad de Sevilla Logo" width="50" height="50" />
            </div>

          </div>
          
          <div class="experience-content">
            <div class="project-highlight">
              <h4 class="project-title">{t('experience.jobs.junior.project')}</h4>
              <p class="project-description">{t('experience.jobs.junior.description')}</p>
            </div>
            
            <div class="achievements">
              <h5 class="achievements-title">{t('experience.jobs.junior.achievements.title')}</h5>
              <ul class="achievements-list">
                <li>
                  <TrendingUp size={16} />
                  {t('experience.jobs.junior.achievements.items.0')}
                </li>
                <li>
                  <Bot size={16} />
                  {t('experience.jobs.junior.achievements.items.1')}
                </li>
                <li>
                  <Workflow size={16} />
                  {t('experience.jobs.junior.achievements.items.2')}
                </li>
                <li>
                  <FlaskConical size={16} />
                  {t('experience.jobs.junior.achievements.items.3')}
                </li>
              </ul>
            </div>
            
            <div class="tech-stack">
              <h5 class="tech-title">{t('experience.jobs.junior.technologies')}</h5>
              <div class="tech-tags">
                <span class="tech-tag">JavaScript</span>
                <span class="tech-tag">Node.js</span>
                <span class="tech-tag">Express</span>
                <span class="tech-tag">MongoDB</span>
                <span class="tech-tag">Grafana</span>
                <span class="tech-tag">Docker</span>
                <span class="tech-tag">Tailwind CSS</span>
                <span class="tech-tag">React</span>
                <span class="tech-tag">Node-RED</span>
                <span class="tech-tag">Github Actions</span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  .experience-timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }

  .experience-timeline::before {
    content: '';
    position: absolute;
    left: 2rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--primary), var(--accent));
  }

  .experience-item {
    position: relative;
    margin-bottom: 3rem;
    padding-left: 5rem;
  }

  .timeline-marker {
    position: absolute;
    left: 1.25rem;
    top: 2rem;
    width: 1.5rem;
    height: 1.5rem;
    background: var(--primary);
    border: 3px solid var(--surface);
    border-radius: 50%;
    box-shadow: var(--shadow-md);
  }

  .experience-card {
    position: relative;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .job-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .company-name {
    font-size: 1.125rem;
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .job-meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .company-logo {
    width: 4rem;
    height: 4rem;
    border: 2px solid var(--primary);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.125rem;
    flex-shrink: 0;
  }

  .company-logo img {
    width: 90%;
    height: 90%;
    object-fit: contain;
    border-radius: 10px;
  }

  .project-highlight {
    margin-bottom: 2rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .achievements {
    margin-bottom: 2rem;
  }

  .achievements-title,
  .tech-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .achievements-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .achievements-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .achievements-list li svg {
    color: var(--success);
    flex-shrink: 0;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    padding: 0.375rem 0.75rem;
    background: var(--surface-alt);
    color: var(--text-secondary);
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  /* .tech-tag:hover {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
  } */

  @media (max-width: 768px) {
    .experience-timeline::before {
      left: 1rem;
    }
    
    .experience-item {
      padding-left: 3rem;
    }
    
    .timeline-marker {
      left: 0.25rem;
    }
    
    .experience-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .company-logo {
      align-self: flex-start;
      width: 3rem;
      height: 3rem;
      font-size: 1rem;
    }
    
    .job-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  @media (max-width: 640px) {
    .experience-item {
      padding-left: 2rem;
    }
    
    .job-title {
      font-size: 1.25rem;
    }
    
    .company-name {
      font-size: 1rem;
    }

    .company-logo {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 0.875rem;
    }
  }
</style>