---
import EducationLeftItem from "./EducationLeftItem.astro";
import EducationRightItem from "./EducationRightItem.astro";

const EDUCATION = [
  {
    title: "Máster en Ingeniería Cloud, Datos y Gestión TI",
    date: "2024 - Actualmente",
    org: "Escuela Internacional de Posgrado",
    image:
      "https://www.mexicodesconocido.com.mx/wp-content/uploads/2022/07/PORTADA-1.png",
  },
  {
    title: "Grado en Ing. Informática - Ing. del Software",
    date: "2018 - 2024",
    org: "Escuela Técnica Superior de Ingeniería Informática",
    image:
      "https://upload.wikimedia.org/wikipedia/commons/thumb/5/5b/ETSI_Informática_Sevilla_y_DrupalCamp_Spain_2011.jpg/800px-ETSI_Informática_Sevilla_y_DrupalCamp_Spain_2011.jpg",
  },
  {
    title: "Advanced English C1",
    date: "16/09/2023",
    org: "Cambridge English Language Assessment",
    image:
      "https://www.couckesacademy.es/cablog/wp-content/uploads/2013/05/IMG_4142.jpg",
  },
  {
    title: "Bachillerato - Modalidad de Ciencias y Tecnología",
    date: "2016 - 2018",
    org: "IES Vicente Aleixandre",
    image:
      "https://www.iesvaleix.com/wp-content/uploads/2023/11/vicente-aexaindr2.jpg",
  },
];
---

<div class="container mx-auto w-full h-full flex flex-col items-center">
  <p
    class="italic text-center dark:text-yellow-200 text-gray-800 opacity-60 dark:opacity-90"
  >
    Última actualización: 01/06/2024
  </p>

  <div class="relative wrap overflow-hidden p-10 pt-2 h-full">
    <div
      class="border-2-2 absolute border-opacity-20 dark:border-opacity-40 border-gray-700 dark:border-yellow-200 h-full border"
      style="left: 50%;"
    >
    </div>
    {
      EDUCATION.map((education, index) =>
        index % 2 === 0 ? (
          <EducationRightItem {...education} />
        ) : (
          <EducationLeftItem {...education} />
        )
      )
    }
  </div>
</div>
