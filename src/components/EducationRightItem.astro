---
interface Props {
  title: string;
  org: string;
  date: string;
  image: string;
}
const { title, org, date, image } = Astro.props;
---

<div
  class="mb-8 flex flex-col md:flex-row justify-between items-center w-full right-timeline group gap-y-4"
>
  <div class="md:order-1 w-5/12"></div>
  <div
    class="z-20 flex items-center order-1 bg-yellow-600 dark:bg-yellow-200 shadow-xl size-6 rounded-full"
  >
  </div>
  <div
    class="bg-[#d1d4df] dark:bg-[#656a7a] bg-gray-400 md:order-1 flex flex-col rounded-lg shadow-xl w-full md:w-5/12 relative overflow-hidden space-y-4"
  >
    <img
      src={image}
      alt={title}
      class="md:absolute inset-0 w-full h-1/2 md:h-full object-cover md:transition-opacity transition-none duration-500 ease-in-out md:group-hover:opacity-0"
    />
    <div
      class="md:relative z-10 md:transition-opacity duration-500 ease-in-out md:opacity-0 group-hover:opacity-100 opacity-100 transition-none md:pt-0 px-6 pb-4"
    >
      <h3 class="mb-3 font-bold dark:text-white text-gray-600 text-xl">
        {title}
      </h3>
      <p class="mt-3 text-sm dark:text-white text-gray-600">{date}</p>
      <p class="mt-1 text-sm dark:text-white text-gray-600">{org}</p>
    </div>
  </div>
</div>
